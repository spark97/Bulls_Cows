<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/R">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guess"
        android:hint="Enter Guess"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Your Guess"
        android:id="@+id/check"
        android:layout_marginRight="56dp"
        android:layout_below="@+id/guess"
        android:layout_alignRight="@+id/guess"
        android:layout_alignEnd="@+id/guess"
        android:layout_marginEnd="56dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start New Game"
        android:id="@+id/newgame"
        android:layout_below="@+id/guess"
        android:layout_alignLeft="@+id/difficulty"
        android:layout_alignStart="@+id/difficulty"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="28dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/lv"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/newgame"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="dd"
        android:id="@+id/steps"
        android:layout_alignParentTop="true"
        android:gravity="left|center_vertical"
        android:textAlignment="gravity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/difficulty"
        android:gravity="center_vertical|right"
        android:textAlignment="gravity"
        android:layout_alignTop="@+id/steps"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/hs"
        android:layout_alignRight="@+id/lv"
        android:layout_alignEnd="@+id/lv"
        android:layout_alignTop="@+id/difficulty" />

</RelativeLayout>
