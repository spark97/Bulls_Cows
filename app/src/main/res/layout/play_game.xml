<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/R">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guess"
        android:layout_marginTop="42dp"
        android:hint="Enter Guess"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignRight="@+id/check"
        android:layout_alignEnd="@+id/check"
        android:layout_alignLeft="@+id/check"
        android:layout_alignStart="@+id/check" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Your Guess"
        android:id="@+id/check"
        android:layout_below="@+id/guess"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start New Game"
        android:id="@+id/newgame"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/check"
        android:layout_alignStart="@+id/check"
        android:layout_alignRight="@+id/check"
        android:layout_alignEnd="@+id/check" />
</RelativeLayout>
